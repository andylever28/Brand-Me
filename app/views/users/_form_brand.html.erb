<!-- this form is to sign up new Brands  -->
<div class="container">
  <div class="signupform row"> <!-- Beginrow -->
    <div class="signupcol col-sm-6"> <!-- Begin signup form -->
 <% if params[:kind] != nil %>
      <% session[:kind] = params[:kind] %>
      <%end%>
      <%= form_for(user) do |f| %>
      <% if user.errors.any? %>
      <div id="error_explanation">
        <h2 class="errors"><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h3>

        <ul>
          <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <h1 class="signup">
        <% if params[:kind] != nil %>
          <% session[:kind] = params[:kind] %>
        <%end%>
          <%= session[:kind] %> Sign Up
      </h1>

        <div class="field">
          <%= f.text_field :first_name, placeholder: "Company Name" %>
        </div>

        <div class="field">
          <%= f.text_field :email, placeholder: "E-mail Address"%>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "Password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, placeholder: "Re-type password" %>
        </div>
       <div class="formbundler">
        <div class="field">
          <%= f.label :category %> <br>
          <%= f.select :category, %w(Art Adventure Beauty Fashion Fishing Fitness Foodie Gaming Music Outdoor Pets Sports Technology Travel Wedding) %>
        </div>

    <%= f.hidden_field(:kind, :value => session[:kind])%>
        <%= f.hidden_field(:age, :value => "X")%>
    <%= f.hidden_field(:gender, :value => "X")%>

        <div class="brandactions">
          <%= f.submit "Sign up!", class: "login-submit-button", id: "brandinput"%>
        </div>
       </div>
        <p class="oppositekindlink"> <%= link_to "Click here for an Ambassador account.", :controller => "users", :action => "new", :kind => "Ambassador" %>  </p>

        <% end %>
        </div>
        <div class="signupcol col-sm-6"> <!-- signup info -->
        <%= image_tag "seo-icon-2.png", id: "multiuser" %>
        <p class="signupinfo"> Find your Ambassador. Grow your Brand. BrandME offers  a unique search tool to help connect with the right Ambassadors. </p>
      </div> <!-- end sign up info -->
      </div> <!-- End sign up form -->

    </div>
