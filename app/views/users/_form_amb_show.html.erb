<div class="container">
	<div class="searchresults row"> 
		<div class="showinfoamb col-md-6">
			<%= image_tag(user.twitter_datum.first.url) %>
			<p id="showname">
				<%= @user.first_name %> <%= @user.last_name %> 
			</p>
			<p>
				<%= @user.summary %>
			</p>

			<p>
				<strong></strong>
				<%= @user.gender %> - <%= @user.age %> years old - <%= @user.category %>
			</p>
			<p>
				<%= mail_to(@user.email, name = nil) %>
			</p>

			<% if @current_user.kind == "Ambassador" && @current_user.twitter_datum.first == nil  %>
				<p> It looks like you haven't added your twitter profile. Please enter your twitter handle below!</p> 
					<%= form_tag('/users/'+current_user.id.to_s+'/twitter_datum', method: "post") do %>
					<%= label_tag(:q, "Please enter your twitter handle") %>
					<%= text_field_tag(:q) %>
					<%= submit_tag("Search", id: "btn") %>
			<% end %>
			<% else %>
				<% @user.twitter_datum.each do |twit| %>
				<p> <strong> Twitter handle: </strong> <%= twit.screen_name %> </p>
				<p> <strong> Followers: </strong><%= twit.followers_count %> </p>
				<p> <strong> Statuses: </strong> <%= twit.statuses_count %> </p>
			<% end %>
			<% end %>
		</div>

		<div class="col-xs-12 col-md-6">
			<div>
				<a class="twitter-timeline" href="https://twitter.com/<%=@user.twitter_datum.first.screen_name%>" data-height="450"
					>Tweets by 	</a> <script async src="http://platform.twitter.com/widgets.js" charset="utf-8"></script></div>
				</div>
			</div>
		</div>