<div class="container">
	<div class="row"> 
		<div class="showinfoamb col-md-6">
		<div class="row">
		<div class="col-xs-12">
		<% if @user.twitter_datum.first %>
			
			<%= image_tag("default-avatar.png", class: "defaultimg") %>
			<% else %>
			<%= image_tag("default-avatar.png", class: "defaultimg") %>
			<% end %>
		</div>
		</div>
		<div class="row">
		<div class="col-xs-12">
			<p class="showname">
				<%= @user.first_name %> <%= @user.last_name %> || <%= mail_to(@user.email, name = nil) %>
			</p>
			<p class="showname">
				<%= @user.gender %> - <%= @user.age %> years old - <%= @user.category %>
			</p>
			<p class="showname">
				<%= @user.summary %>
			</p>

			<% if @current_user.kind == "Ambassador" && @current_user.twitter_datum.first == nil  %>
					<%= form_tag('/users/'+current_user.id.to_s+'/twitter_datum', method: "post", id: "twitterform") do %>
					<%= label_tag(:q, "Please enter your twitter handle") %>
					<%= text_field_tag(:q) %>
					<%= submit_tag("Search", id: "btn") %>
			<% end %>
			<% else %>
				<% @user.twitter_datum.each do |twit| %>
				<p id="showtwitterstats"> <%= twit.followers_count %> Followers || <%= twit.statuses_count %> Tweets</p>
			<% end %>
			<% end %>
		</div>
		</div>
</div>






		<div class="tweetframe col-xs-12 col-md-6">
			<div>
			<% if @user.twitter_datum.first %>
				<a class="twitter-timeline" href="https://twitter.com/<%=@user.twitter_datum.first.screen_name%>" data-height="450"
					>Tweets by 	</a> <script async src="http://platform.twitter.com/widgets.js" charset="utf-8"></script>
					<% else %>
					<p>User has not uploaded a twitter yet.</p>
				<a class="twitter-timeline" href="https://twitter.com/jack" data-height="450"
					>Tweets by 	</a> <script async src="http://platform.twitter.com/widgets.js" charset="utf-8"></script>					<% end %>
					</div>
				</div>
			</div>
		</div>